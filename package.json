{
  "name": "task-floater",
  "version": "1.6.0",
  "description": "A beautiful, modern floating task manager for macOS with glassmorphism design",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyrus-reap/task-floater.git"
  },
  "bugs": {
    "url": "https://github.com/cyrus-reap/task-floater/issues"
  },
  "homepage": "https://github.com/cyrus-reap/task-floater#readme",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\"",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html}\"",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "precommit": "lint-staged",
    "prepare": "husky",
    "icons": "node scripts/generate-icons.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder -mwl",
    "release": "./scripts/release.sh",
    "release:quick": "npm run validate && npm run test:run && npm run icons && npm run dist:mac"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.html": [
      "prettier --write"
    ]
  },
  "keywords": [
    "electron",
    "task-manager",
    "todo",
    "floating",
    "macos",
    "productivity",
    "typescript",
    "glassmorphism",
    "always-on-top",
    "pomodoro",
    "timer"
  ],
  "author": {
    "name": "Cyrus David Pastelero",
    "email": "cyrus@reap.hk"
  },
  "license": "MIT",
  "devDependencies": {
    "@mistweaverco/electron-notarize-async": "0.0.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "png2icons": "^2.0.1",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.reap.task-floater",
    "productName": "Task Floater",
    "copyright": "Copyright Â© 2026 Cyrus David Pastelero",
    "publish": {
      "provider": "github",
      "owner": "Cyvid7-Darus10",
      "repo": "task-floater"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "afterSign": "scripts/notarize.js",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/tesseract.js/**/*",
      "**/node_modules/tesseract.js-core/**/*"
    ],
    "compression": "maximum",
    "files": [
      "dist/**/*",
      "src/index.html",
      "build/icon.png",
      "build/icon.icns",
      "package.json"
    ],
    "mac": {
      "identity": "Cyrus David Pastelero (SM3PR8224Z)",
      "notarize": false,
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "electronLanguages": [
        "en"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "tesseract.js": "^7.0.0"
  }
}
