{
  "name": "task-floater",
  "version": "1.0.0",
  "description": "A beautiful, modern floating task manager for macOS with glassmorphism design",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyrus-reap/task-floater.git"
  },
  "bugs": {
    "url": "https://github.com/cyrus-reap/task-floater/issues"
  },
  "homepage": "https://github.com/cyrus-reap/task-floater#readme",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\""
  },
  "keywords": [
    "electron",
    "task-manager",
    "todo",
    "floating",
    "macos",
    "productivity",
    "typescript",
    "glassmorphism",
    "always-on-top",
    "pomodoro",
    "timer"
  ],
  "author": {
    "name": "Cyrus David Pastelero",
    "email": "cyrus@reap.hk"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
