{
  "name": "task-floater",
  "version": "1.0.0",
  "description": "A beautiful, modern floating task manager for macOS with glassmorphism design",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyrus-reap/task-floater.git"
  },
  "bugs": {
    "url": "https://github.com/cyrus-reap/task-floater/issues"
  },
  "homepage": "https://github.com/cyrus-reap/task-floater#readme",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\"",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html}\"",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.html": [
      "prettier --write"
    ]
  },
  "keywords": [
    "electron",
    "task-manager",
    "todo",
    "floating",
    "macos",
    "productivity",
    "typescript",
    "glassmorphism",
    "always-on-top",
    "pomodoro",
    "timer"
  ],
  "author": {
    "name": "Cyrus David Pastelero",
    "email": "cyrus@reap.hk"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
